{
	"compilerOptions": {
		"module": "esnext",
		"target": "ES6",
		"lib": ["ESNext", "dom"],

		"sourceMap": true,

		// Module resolution
		"baseUrl": ".",
		"esModuleInterop": true,
		"moduleResolution": "node",

		// Strict Checks
		"alwaysStrict": true,
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"noImplicitAny": true,
		"strictNullChecks": true,

		// Linter Checks
		"noImplicitReturns": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},

	"files": ["./nextcloud-vue.shims.d.ts"],
	"include": ["./nextcloud-vue.shims.d.ts", "./src/**/*.ts", "./src/**/*.vue"],
	"exclude": ["node_modules/**/*"]
}
