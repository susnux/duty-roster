    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4"
  },
  "prettier": {
    "useTabs": true,
    "semi": false,
    "singleQuote": true
  },
  "browserslist": [
    "extends @nextcloud/browserslist-config"
  ],
  "engines": {
    "node": "^16.0.0 || ^18.0.0 || ^19.0.0",
    "npm": "^8.0.0"
